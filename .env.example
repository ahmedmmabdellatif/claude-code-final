DATABASE_URL="postgresql://user:password@localhost:5432/fitness_coach_app?schema=public"

# Backend API
EXPO_PUBLIC_API_URL="http://localhost:3000"

# Stripe (for payments)
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
